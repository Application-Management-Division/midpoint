<c:resource xmlns="http://midpoint.evolveum.com/xml/ns/public/common/common-3"
        xmlns:c="http://midpoint.evolveum.com/xml/ns/public/common/common-3"
        xmlns:q="http://prism.evolveum.com/xml/ns/public/query-3"
        xmlns:ri="http://midpoint.evolveum.com/xml/ns/public/resource/instance-3"
        xmlns:icfc="http://midpoint.evolveum.com/xml/ns/public/connector/icf-1/connector-schema-3"
        oid="89d4fce0-f378-453a-a4f7-438efff10cfe">

    <c:name>resource-ais</c:name>
    <connectorRef type="ConnectorType">
        <filter>
            <q:equal>
                <q:path>c:connectorType</q:path>
                <q:value>com.evolveum.polygon.connector.csv.CsvConnector</q:value>
            </q:equal>
        </filter>
    </connectorRef>

    <c:connectorConfiguration>
        <icfc:configurationProperties
                xmlns:icfccsvfile="http://midpoint.evolveum.com/xml/ns/public/connector/icf-1/bundle/com.evolveum.polygon.connector-csv/com.evolveum.polygon.connector.csv.CsvConnector">
            <icfccsvfile:filePath>will-be-replaced-by-test-code</icfccsvfile:filePath> <!-- resource-ais.csv -->
            <icfccsvfile:encoding>utf-8</icfccsvfile:encoding>
            <icfccsvfile:fieldDelimiter>,</icfccsvfile:fieldDelimiter>
            <icfccsvfile:multivalueDelimiter>;</icfccsvfile:multivalueDelimiter>
            <icfccsvfile:uniqueAttribute>aisId</icfccsvfile:uniqueAttribute>
        </icfc:configurationProperties>
    </c:connectorConfiguration>

    <schemaHandling>
        <objectType>
            <kind>account</kind>
            <intent>default</intent>
            <default>true</default>
            <objectClass>ri:AccountObjectClass</objectClass>
            <multiplicity>
                <maxOccurs>unbounded</maxOccurs>
                <tag>
                    <expression>
                        <script>
                            <code>basic.getIdentifierValue(projection)</code>
                        </script>
                    </expression>
                </tag>
            </multiplicity>
            <attribute>
                <c:ref>ri:aisId</c:ref>
                <inbound>
                    <strength>weak</strength>
                    <expression>
                        <!-- Hack. This mapping should be invokable directly. -->
                        <!-- We assume the reference ID is present. -->
                        <path>$shadow/correlationState/referenceId</path>
                    </expression>
                    <target>
                        <path>name</path>
                    </target>
                    <evaluationPhases>
                        <!-- Before correlation, this ID may not be known. -->
                        <exclude>correlation</exclude>
                    </evaluationPhases>
                </inbound>
                <inbound>
                    <strength>strong</strength>
                    <target>
                        <path>employeeNumber</path> <!-- temporary -->
                    </target>
                </inbound>
            </attribute>
            <attribute>
                <c:ref>ri:givenName</c:ref>
                <inbound>
                    <strength>strong</strength>
                    <target>
                        <path>givenName</path> <!-- temporary -->
                    </target>
                </inbound>
            </attribute>
            <attribute>
                <c:ref>ri:familyName</c:ref>
                <inbound>
                    <strength>strong</strength>
                    <target>
                        <path>familyName</path> <!-- temporary -->
                    </target>
                </inbound>
            </attribute>
            <attribute>
                <c:ref>ri:dateOfBirth</c:ref>
                <inbound>
                    <strength>strong</strength>
                    <target>
                        <path>extension/dateOfBirth</path> <!-- temporary -->
                    </target>
                </inbound>
            </attribute>
            <attribute>
                <c:ref>ri:nationalId</c:ref>
                <inbound>
                    <strength>strong</strength>
                    <target>
                        <path>extension/nationalId</path> <!-- temporary -->
                    </target>
                </inbound>
            </attribute>
            <attribute>
                <c:ref>ri:emailAddress</c:ref>
                <inbound>
                    <strength>strong</strength>
                    <target>
                        <path>emailAddress</path> <!-- temporary -->
                    </target>
                </inbound>
            </attribute>
            <inboundMappingsEvaluation>
                <defaultEvaluationPhases>
                    <phase>clockwork</phase>
                    <phase>correlation</phase>
                </defaultEvaluationPhases>
            </inboundMappingsEvaluation>
        </objectType>
    </schemaHandling>

    <synchronization>
        <objectSynchronization>
            <enabled>true</enabled>
            <kind>account</kind>
            <intent>default</intent>
            <correlationProperties>
                <property>
                    <source>$focus/givenName</source>
                </property>
                <property>
                    <source>$focus/familyName</source>
                </property>
                <property>
                    <source>$focus/extension/dateOfBirth</source>
                </property>
                <property>
                    <source>$focus/extension/nationalId</source>
                </property>
            </correlationProperties>
            <correlators>
                <idMatch>
                    <sorIdentifierProperty>$shadow/attributes/ri:aisId</sorIdentifierProperty>
                    <!-- URL and credentials are ignored when dummy ID Match Service implementation is used.
                         They are used only when running TestIdMatchReal (not part of the test suite). -->
                    <url>http://localhost:9090/match/api/1</url>
                    <username>administrator</username>
                    <password><clearValue>5ecr3t</clearValue></password>
                    <followOn>
                        <filter>
                            <filter>
                                <q:equal>
                                    <q:path>name</q:path>
                                    <expression>
                                        <path>$correlationState/referenceId</path>
                                    </expression>
                                </q:equal>
                            </filter>
                        </filter>
                    </followOn>
                </idMatch>
            </correlators>
            <reaction>
                <situation>linked</situation>
                <synchronize>true</synchronize>
            </reaction>
            <reaction>
                <situation>deleted</situation>
                <synchronize>true</synchronize>
                <action>
                    <handlerUri>http://midpoint.evolveum.com/xml/ns/public/model/action-3#deleteFocus</handlerUri>
                </action>
            </reaction>
            <reaction>
                <situation>unlinked</situation>
                <synchronize>true</synchronize>
                <action>
                    <handlerUri>http://midpoint.evolveum.com/xml/ns/public/model/action-3#link</handlerUri>
                </action>
            </reaction>
            <reaction>
                <situation>unmatched</situation>
                <synchronize>true</synchronize>
                <action>
                    <handlerUri>http://midpoint.evolveum.com/xml/ns/public/model/action-3#addFocus</handlerUri>
                </action>
            </reaction>
        </objectSynchronization>
    </synchronization>
</c:resource>
