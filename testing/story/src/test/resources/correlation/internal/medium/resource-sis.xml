<c:resource xmlns="http://midpoint.evolveum.com/xml/ns/public/common/common-3"
            xmlns:c="http://midpoint.evolveum.com/xml/ns/public/common/common-3"
            xmlns:q="http://prism.evolveum.com/xml/ns/public/query-3"
            xmlns:ri="http://midpoint.evolveum.com/xml/ns/public/resource/instance-3"
            xmlns:icfc="http://midpoint.evolveum.com/xml/ns/public/connector/icf-1/connector-schema-3"
            oid="83de4034-775a-4ead-829b-a4041620d4c2">

    <c:name>SIS</c:name>
    <connectorRef type="ConnectorType">
        <filter>
            <q:equal>
                <q:path>c:connectorType</q:path>
                <q:value>com.evolveum.polygon.connector.csv.CsvConnector</q:value>
            </q:equal>
        </filter>
    </connectorRef>

    <c:connectorConfiguration>
        <icfc:configurationProperties
                xmlns:icfccsvfile="http://midpoint.evolveum.com/xml/ns/public/connector/icf-1/bundle/com.evolveum.polygon.connector-csv/com.evolveum.polygon.connector.csv.CsvConnector">
            <icfccsvfile:filePath>will-be-replaced-by-test-code</icfccsvfile:filePath> <!-- resource-sis.csv -->
            <icfccsvfile:encoding>utf-8</icfccsvfile:encoding>
            <icfccsvfile:fieldDelimiter>,</icfccsvfile:fieldDelimiter>
            <icfccsvfile:multivalueDelimiter>;</icfccsvfile:multivalueDelimiter>
            <icfccsvfile:uniqueAttribute>sisId</icfccsvfile:uniqueAttribute>
        </icfc:configurationProperties>
    </c:connectorConfiguration>

    <schemaHandling>
        <objectType>
            <kind>account</kind>
            <intent>default</intent>
            <default>true</default>
            <objectClass>ri:AccountObjectClass</objectClass>
            <attribute>
                <c:ref>ri:sisId</c:ref>
                <inbound>
                    <strength>strong</strength>
                    <target>
                        <path>extension/sisId</path>
                    </target>
                </inbound>
            </attribute>
            <attribute>
                <c:ref>ri:firstName</c:ref>
                <inbound>
                    <strength>strong</strength>
                    <target>
                        <path>extension/sisGivenName</path>
                    </target>
                </inbound>
            </attribute>
            <attribute>
                <c:ref>ri:lastName</c:ref>
                <inbound>
                    <strength>strong</strength>
                    <target>
                        <path>extension/sisFamilyName</path>
                    </target>
                </inbound>
            </attribute>
            <attribute>
                <c:ref>ri:born</c:ref>
                <inbound>
                    <strength>strong</strength>
                    <target>
                        <path>extension/sisDateOfBirth</path>
                    </target>
                </inbound>
            </attribute>
            <attribute>
                <c:ref>ri:nationalId</c:ref>
                <inbound>
                    <strength>strong</strength>
                    <target>
                        <path>extension/sisNationalId</path>
                    </target>
                </inbound>
            </attribute>
            <mappingsEvaluation>
                <inbound>
                    <defaultEvaluationPhases>
                        <phase>clockwork</phase>
                        <phase>beforeCorrelation</phase>
                    </defaultEvaluationPhases>
                </inbound>
            </mappingsEvaluation>
        </objectType>
    </schemaHandling>
    <synchronization>
        <objectSynchronization>
            <enabled>true</enabled>
            <kind>account</kind>
            <intent>default</intent>
            <correlationDefinition>
                <correlators>
                    <definitions>
                        <items>
                            <item>
                                <name>givenName</name>
                                <documentation>
                                    Specifies where to find `givenName` both in source (pre-focus object being matched)
                                    or target (existing focus objects we are matching against).
                                </documentation>
                                <source>
                                    <path>extension/sisGivenName</path>
                                </source>
                                <target>
                                    <!-- Where the "primary" (selected, official) value of the given name is found -->
                                    <path>givenName</path>
                                </target>
                                <target>
                                    <!-- Where the SIS-specific value of the given name is found. -->
                                    <qualifier>sis</qualifier>
                                    <path>extension/sisGivenName</path>
                                </target>
                                <target>
                                    <!-- Where the HR-specific value of the given name is found. -->
                                    <qualifier>hr</qualifier>
                                    <path>extension/hrGivenName</path>
                                </target>
                                <target>
                                    <!-- Where the "External-specific" value of the given name is found. -->
                                    <qualifier>external</qualifier>
                                    <path>extension/externalGivenName</path>
                                </target>
                            </item>
                            <item>
                                <name>familyName</name>
                                <source>
                                    <path>extension/sisFamilyName</path>
                                </source>
                                <target>
                                    <path>familyName</path>
                                </target>
                                <target>
                                    <qualifier>sis</qualifier>
                                    <path>extension/sisFamilyName</path>
                                </target>
                                <target>
                                    <qualifier>hr</qualifier>
                                    <path>extension/hrFamilyName</path>
                                </target>
                                <target>
                                    <qualifier>external</qualifier>
                                    <path>extension/externalFamilyName</path>
                                </target>
                            </item>
                            <item>
                                <name>dateOfBirth</name>
                                <source>
                                    <path>extension/sisDateOfBirth</path>
                                </source>
                                <target>
                                    <path>extension/dateOfBirth</path>
                                </target>
                                <target>
                                    <qualifier>sis</qualifier>
                                    <path>extension/sisDateOfBirth</path>
                                </target>
                                <target>
                                    <qualifier>hr</qualifier>
                                    <path>extension/hrDateOfBirth</path>
                                </target>
                                <target>
                                    <qualifier>external</qualifier>
                                    <path>extension/externalDateOfBirth</path>
                                </target>
                            </item>
                            <item>
                                <name>nationalId</name>
                                <source>
                                    <path>extension/sisNationalId</path>
                                </source>
                                <target>
                                    <path>extension/nationalId</path>
                                </target>
                                <target>
                                    <qualifier>sis</qualifier>
                                    <path>extension/sisNationalId</path>
                                </target>
                                <target>
                                    <qualifier>hr</qualifier>
                                    <path>extension/hrNationalId</path>
                                </target>
                                <target>
                                    <qualifier>external</qualifier>
                                    <path>extension/externalNationalId</path>
                                </target>
                            </item>
                        </items>
                    </definitions>
                    <items>
                        <authority>principal</authority>
                        <name>name-date-id</name>
                        <documentation>
                            If key attributes (family name, date of birth, national ID) exactly match,
                            we are immediately done. We ignore given name here.
                        </documentation>
                        <item>
                            <ref>familyName</ref>
                        </item>
                        <item>
                            <ref>dateOfBirth</ref>
                        </item>
                        <item>
                            <ref>nationalId</ref>
                        </item>
                    </items>
                    <items>
                        <authority>nonAuthoritative</authority>
                        <name>names-date</name>
                        <documentation>
                            If given and family name and the date of birth match, we present an option to the operator.
                        </documentation>
                        <item>
                            <ref>givenName</ref>
                        </item>
                        <item>
                            <ref>familyName</ref>
                        </item>
                        <item>
                            <ref>dateOfBirth</ref>
                        </item>
                    </items>
                    <items>
                        <authority>nonAuthoritative</authority>
                        <name>id</name>
                        <documentation>
                            If national ID matches, we present an option to the operator.
                        </documentation>
                        <item>
                            <ref>nationalId</ref>
                        </item>
                    </items>
                </correlators>
                <cases/>
            </correlationDefinition>
            <reaction>
                <situation>linked</situation>
                <synchronize>true</synchronize>
            </reaction>
            <reaction>
                <situation>deleted</situation>
                <action>
                    <handlerUri>http://midpoint.evolveum.com/xml/ns/public/model/action-3#deleteFocus</handlerUri>
                </action>
            </reaction>
            <reaction>
                <situation>unlinked</situation>
                <action>
                    <handlerUri>http://midpoint.evolveum.com/xml/ns/public/model/action-3#link</handlerUri>
                </action>
            </reaction>
            <reaction>
                <situation>unmatched</situation>
                <action>
                    <handlerUri>http://midpoint.evolveum.com/xml/ns/public/model/action-3#addFocus</handlerUri>
                </action>
            </reaction>
        </objectSynchronization>
    </synchronization>
</c:resource>
