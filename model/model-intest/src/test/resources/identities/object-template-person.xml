<objectTemplate
        xmlns="http://midpoint.evolveum.com/xml/ns/public/common/common-3"
        oid="c0d96ed0-bec7-4c6e-9a69-133b0301bdb8">
    <name>person</name>
    <iterationSpecification>
        <maxIterations>99</maxIterations>
    </iterationSpecification>
    <item>
        <ref>givenName</ref>
        <identity/>
        <mapping> <!-- temporary workaround for a missing functionality -->
            <source>
                <path>identities/identity</path>
            </source>
            <expression>
                <script>
                    <relativityMode>absolute</relativityMode>
                    <code>
                        import com.evolveum.midpoint.model.intest.TestIdentities
                        TestIdentities.selectIdentityValue(identity, 'givenName')
                    </code>
                </script>
            </expression>
        </mapping>
    </item>
    <item>
        <ref>familyName</ref>
        <identity/>
        <mapping> <!-- temporary workaround for a missing functionality -->
            <source>
                <path>identities/identity</path>
            </source>
            <expression>
                <script>
                    <relativityMode>absolute</relativityMode>
                    <code>
                        import com.evolveum.midpoint.model.intest.TestIdentities
                        TestIdentities.selectIdentityValue(identity, 'familyName')
                    </code>
                </script>
            </expression>
        </mapping>
    </item>
    <item>
        <ref>extension/personalNumber</ref>
        <identity/>
        <mapping> <!-- temporary workaround for a missing functionality -->
            <source>
                <path>identities/identity</path>
            </source>
            <expression>
                <script>
                    <relativityMode>absolute</relativityMode>
                    <code>
                        import com.evolveum.midpoint.model.intest.TestIdentities
                        TestIdentities.selectIdentityValue(identity, 'personalNumber')
                    </code>
                </script>
            </expression>
        </mapping>
    </item>
    <item>
        <ref>name</ref>
        <mapping>
            <source>
                <path>familyName</path>
            </source>
            <expression>
                <script>
                    <code>
                        basic.stringify(familyName).toLowerCase() + (iteration + 1)
                    </code>
                </script>
            </expression>
        </mapping>
    </item>
</objectTemplate>
