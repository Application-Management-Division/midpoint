<task oid="04e257d1-bb25-4675-8e00-f248f164fbc3"
        xmlns="http://midpoint.evolveum.com/xml/ns/public/common/common-3"
        xmlns:q="http://prism.evolveum.com/xml/ns/public/query-3"
        xmlns:ext="http://midpoint.evolveum.com/xml/ns/repo-common-test/extension">
    <name>task-mock-bucketed</name>
    <ownerRef oid="00000000-0000-0000-0000-000000000002"/>
    <executionStatus>runnable</executionStatus>
    <recurrence>single</recurrence>
    <activity>
        <work>
            <extension>
                <ext:searchIterativeMock>
                    <ext:objectSet>
                        <objectType>RoleType</objectType>
                        <objectQuery>
                            <q:filter>
                                <q:substring>
                                    <q:path>name</q:path>
                                    <q:value>role-</q:value>
                                    <q:anchorStart>true</q:anchorStart>
                                </q:substring>
                            </q:filter>
                        </objectQuery>
                    </ext:objectSet>
                    <ext:message>Role: </ext:message>
                </ext:searchIterativeMock>
            </extension>
        </work>
        <distribution>
            <buckets>
                <stringSegmentation>
                    <discriminator>name</discriminator>
                    <boundary>
                        <position>1</position>
                        <characters>r</characters>
                    </boundary>
                    <boundary>
                        <position>2</position>
                        <characters>o</characters>
                    </boundary>
                    <boundary>
                        <position>3</position>
                        <characters>l</characters>
                    </boundary>
                    <boundary>
                        <position>4</position>
                        <characters>e</characters>
                    </boundary>
                    <boundary>
                        <position>5</position>
                        <characters>\-</characters>
                    </boundary>
                    <boundary>
                        <position>6</position>
                        <characters>0-9</characters>
                    </boundary>
                </stringSegmentation>
            </buckets>
        </distribution>
    </activity>
</task>
